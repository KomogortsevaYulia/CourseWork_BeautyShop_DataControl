            @Html.ValidationMessageFor(model => model.Id_Employee, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Id_Clients, null, htmlAttributes: new { @class = "control-label col-md-2" })
